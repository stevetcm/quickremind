<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="#fffafafa"
    android:layout_marginTop="9dp"
    card_view:cardElevation="3dp"
    card_view:cardCornerRadius="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/card_element"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Color tag view
            <View
                android:id="@+id/color_code"
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:background="@color/defaultcolor"/> -->

            <TextView
                android:id="@+id/card_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="25dp"
                android:textColor="@color/textColor"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/card_date_img"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/card_content"
                android:src="@drawable/ic_date_range_gray" />

            <TextView
                android:id="@+id/card_date_text"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="2dp"
                android:textSize="13sp"
                android:layout_below="@+id/card_content"
                android:layout_toRightOf="@id/card_date_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="11dp"
                android:textColor="@color/lightgray"/>

            <ImageView
                android:id="@+id/card_time_img"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="13dp"
                android:layout_below="@+id/card_content"
                android:layout_toRightOf="@+id/card_date_text"
                android:src="@drawable/ic_access_time_gray" />

            <TextView
                android:id="@+id/card_time_text"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="2dp"
                android:textSize="13sp"
                android:layout_below="@+id/card_content"
                android:layout_toRightOf="@id/card_time_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="7dp"
                android:textColor="@color/lightgray" />

            <ImageView
                android:id="@+id/card_repeat_img"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="13dp"
                android:layout_below="@+id/card_content"
                android:layout_toRightOf="@+id/card_time_text"
                android:src="@drawable/ic_repeat_on_gray" />

            <View
                android:id="@+id/card_separator"
                android:layout_width="1dp"
                android:layout_height="19dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="1dp"
                android:layout_below="@+id/card_content"
                android:layout_toRightOf="@+id/card_repeat_img"
                android:background="@color/lightgray"/>

            <ImageView
                android:id="@+id/card_persistent_img"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="13dp"
                android:layout_below="@+id/card_content"
                android:layout_toRightOf="@+id/card_separator"
                android:src="@drawable/ic_pushpin_on_gray" />

            <ImageView
                android:id="@+id/overflow_more"
                android:layout_width="28dp"
                android:layout_height="42dp"
                android:layout_alignParentRight="true"
                android:padding="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_more_vert_gray" />

        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>